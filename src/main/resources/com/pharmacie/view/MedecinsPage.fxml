<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pharmacie.controller.MedecinsController"
      spacing="10"
      style="-fx-padding: 20;">

    <!-- Barre de recherche -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchFieldMedecin" promptText="Rechercher un médecin..." prefWidth="1200" prefHeight="30"/>
        <Button fx:id="btnSearch" text="Rechercher" onAction="#handleSearchMedecin" disable="true"/>
    </HBox>

    <!-- TableView pour afficher la liste des médecins -->
    <TableView fx:id="medecinsTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colCivilite" text="Civilité" reorderable="false" resizable="false" prefWidth="100"/>
            <TableColumn fx:id="colNomExercice" text="Nom" reorderable="false" resizable="false" prefWidth="150"/>
            <TableColumn fx:id="colPrenomExercice" text="Prénom" reorderable="false" resizable="false" prefWidth="150"/>
            <TableColumn fx:id="colRppsMedecin" text="RPPS" reorderable="false" resizable="false" prefWidth="150"/>
            <TableColumn fx:id="colProfession" text="Profession" reorderable="false" resizable="false" prefWidth="150"/>
            <TableColumn fx:id="colModeExercice" text="Mode Exercice" reorderable="false" resizable="false" prefWidth="150"/>
            <TableColumn fx:id="colQualifications" text="Qualifications" reorderable="false" resizable="false" prefWidth="200"/>
            <TableColumn fx:id="colStructureExercice" text="Structure Exercice" reorderable="false" resizable="false" prefWidth="200"/>
            <TableColumn fx:id="colFonctionActivite" text="Fonction Activité" reorderable="false" resizable="false" prefWidth="200"/>
            <TableColumn fx:id="colGenreActivite" text="Genre Activité" reorderable="false" resizable="false" prefWidth="200"/>

            <!-- Colonne Supprimer -->
            <TableColumn fx:id="colSupprimer" text="Supprimer" reorderable="false" resizable="false" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Pagination -->
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="statusLabel" text="Affichage des médecins" />
        <Pagination fx:id="pagination"/>
    </HBox>

    <!-- Boutons pour gérer les médecins -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnAddMedecin" text="Ajouter Médecin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox>