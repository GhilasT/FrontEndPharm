<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" prefHeight="730.0" prefWidth="1280.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pharmacie.controller.VentesController">

   <center>
      <VBox prefHeight="730.0" prefWidth="1280.0">
         <children>
            <!-- En-tête : titre + boutons -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1280.0" spacing="20.0">
               <children>
                  <Label text="Liste des ventes récentes" textFill="#007b3d">
                     <font>
                        <Font name="Open Sans Semibold" size="24.0"/>
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="280.0" HBox.hgrow="ALWAYS" spacing="10.0">
                     <children>
                        <Button fx:id="btnEffectuerVente" mnemonicParsing="false"
                                onAction="#handleEffectuerVente" prefHeight="50.0" prefWidth="200.0"
                                style="-fx-background-color: #007B3D; -fx-background-radius: 5;"
                                text="Effectuer une Vente" textFill="WHITE">
                           <font>
                              <Font name="Open Sans Semibold" size="16.0"/>
                           </font>
                        </Button>
                        <Button fx:id="btnToggleVentes" mnemonicParsing="false"
                                onAction="#handleToggleVentes" prefHeight="50.0" prefWidth="200.0"
                                style="-fx-background-color: #007B3D; -fx-background-radius: 5;"
                                text="Afficher mes ventes" textFill="WHITE">
                           <font>
                              <Font name="Open Sans Semibold" size="16.0"/>
                           </font>
                        </Button>
                        <Button fx:id="btnReset" mnemonicParsing="false"
                                onAction="#handleReset" prefHeight="50.0" prefWidth="200.0"
                                style="-fx-background-color: #95A5A6; -fx-background-radius: 5;"
                                text="Réinitialiser" textFill="WHITE">
                           <font>
                              <Font name="Open Sans Semibold" size="16.0"/>
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
               </VBox.margin>
            </HBox>

            <!-- Table des ventes -->
            <TableView fx:id="ventesTable" prefHeight="600.0" prefWidth="1240.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="150.0" text="ID Vente"/>
                  <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date"/>
                  <TableColumn fx:id="clientColumn" prefWidth="150.0" text="Client"/>
                  <TableColumn fx:id="montantColumn" prefWidth="150.0" text="Montant Total"/>
                  <TableColumn fx:id="paiementColumn" prefWidth="150.0" text="Mode Paiement"/>
                  <TableColumn fx:id="actionsColumn" prefWidth="400.0" text="Actions"/>
               </columns>
               <VBox.margin>
                  <Insets top="10.0" right="20.0" bottom="20.0" left="20.0"/>
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </center>

</BorderPane>