<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<Pane fx:id="gestionPersonnelPane" prefHeight="560.0" prefWidth="1300.0" style="-fx-background-color: #FFFFFF;" 
      xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.pharmacie.controller.GestionPersonnelController">
   <children>
      <!-- En-tête de la section -->
      <Pane prefHeight="60.0" prefWidth="1300.0" style="-fx-background-color: #1F82F2;">
         <children>
            <Button fx:id="backButton" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleBack" 
                   style="-fx-background-color: #0066CC;" text="Retour" textFill="WHITE">
               <font>
                  <Font name="Open Sans Semibold" size="14.0" />
               </font>
            </Button>
            <Label layoutX="100.0" layoutY="15.0" text="Gestion du Personnel" textFill="WHITE">
               <font>
                  <Font name="Open Sans Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
      
      <!-- Boutons pour les différentes catégories de personnel -->
      <Button fx:id="GestPerso" layoutX="42.0" layoutY="100.0" mnemonicParsing="false" 
              prefHeight="116.0" prefWidth="262.0" style="-fx-background-color: #1F82F2;" 
              text="Gestion des Admin" textFill="WHITE">
         <font>
            <Font name="Open Sans Semibold" size="18.0" />
         </font>
      </Button>
      
      <Button fx:id="GestCommandes" layoutX="998.0" layoutY="100.0" mnemonicParsing="false" 
              prefHeight="116.0" prefWidth="262.0" style="-fx-background-color: #1F82F2;" 
              text="Gestion des Apprentis" textFill="WHITE">
         <font>
            <Font name="Open Sans Semibold" size="18.0" />
         </font>
      </Button>
      
      <Button fx:id="GestFournisseurs" layoutX="358.0" layoutY="100.0" mnemonicParsing="false" 
              prefHeight="116.0" prefWidth="262.0" style="-fx-background-color: #1F82F2;" 
              text="Gestion des préparateurs" textFill="WHITE">
         <font>
            <Font name="Open Sans Semibold" size="18.0" />
         </font>
      </Button>
      
      <Button fx:id="GestMedecins" layoutX="680.0" layoutY="100.0" mnemonicParsing="false" 
              prefHeight="116.0" prefWidth="262.0" style="-fx-background-color: #1F82F2;" 
              text="Gestion des Pharmaciens" textFill="WHITE">
         <font>
            <Font name="Open Sans Semibold" size="18.0" />
         </font>
      </Button>
   </children>
</Pane>